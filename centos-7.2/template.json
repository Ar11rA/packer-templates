{
  "variables": {
    "iso_url": "http://mirror.rackspace.com/CentOS/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
    "iso_checksum_type": "sha256",
    "redhat_release": "7.2",
    "atlas_token": "{{env `ATLAS_TOKEN`}}",
    "artifact_name": "wittman/centos-{{user `redhat_release`}}-ansible"
  },

  "builders": [{
    "type": "virtualbox-iso",
    "vm_name": "centos-{{user `redhat_release`}}-ansible",
    "boot_wait": "10s",
    "disk_size": 20480,
    "guest_os_type": "RedHat_64",
    "http_directory": "http",

    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",

    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
    "shutdown_timeout": "10s",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "headless": true,
    "ssh_wait_timeout": "15m",
    "output_directory": "builds",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "768"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ],
    "virtualbox_version_file": ".vbox_version"
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "override": {
      "virtualbox-iso": {
        "scripts": [
          "scripts/base.sh",
          "scripts/vagrant.sh",
          "scripts/virtualbox.sh",
          "scripts/ansible.sh",
          "scripts/cleanup.sh",
          "scripts/zerodisk.sh"
        ]
      }
    }
  }],

  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false
  },
  {
    "type": "atlas",
    "token": "{{user `atlas_token`}}",
    "artifact": "{{user `artifact_name`}}",
    "artifact_type": "vagrant.box",
    "metadata": {
      "version": "0.0.1",
      "provider": "virtualbox",
      "description": "# CentOS {{user `redhat_release`}} with Ansible\n\nMinimal install of CentOS {{user `redhat_release`}} with Ansible installed via EPEL.\n\n## Changelog\n\n#### 0.0.1\n\n- Ansible 1.9.4"
    }
  }]

}
